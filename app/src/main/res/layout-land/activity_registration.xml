<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="329dp"
                app:srcCompat="@drawable/cosmos_1" />
            <EditText
                android:id="@+id/editTextLogin"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/corners"
                android:backgroundTint="@color/white"
                android:hint="@string/enter_log"
                android:inputType="text"
                android:textColorHint="@color/et"
                android:textColor="@color/et"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"/>

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/corners"
                android:backgroundTint="@color/white"
                android:hint="@string/enter_pas"
                android:inputType="textPassword"
                android:textColorHint="@color/et"
                android:textColor="@color/et"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/editTextCheckPass"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/corners"
                android:hint="@string/check_pas"
                android:backgroundTint="@color/white"
                android:inputType="textPassword"
                android:textColorHint="@color/et"
                android:textColor="@color/et"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/corners"
                android:text="@string/register"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/blue"
                android:onClick="Register"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>